<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Add an expense</h3>
  </div>
  <div class="panel-body">
    <form>
      <div {{bind-attr class=':form-group invalidDescription:has-error'}}>
        <label for="description" class="sr-only">Description</label>
        {{input type="text" id="description" class="form-control" value=description placeholder="Description"}}
      </div>

      <div {{bind-attr class=':form-group invalidAmount:has-error'}}>
        <label for="amount" class="sr-only">Amount</label>
        <div class="input-group">
          <div class="input-group-addon">Rs.</div>
          {{input type="number" id="amount" class="form-control" value=amount placeholder="Amount"}}
        </div>
      </div>

      <div class="form-group">
        <label for="paid-by">Paid by</label>
        {{view 'select'
          class='form-control'
          id='paid-by'
          value=paidBy
          content=people
          optionValuePath="content.id"
          optionLabelPath="content.name"
        }}
      </div>

      <div class="form-group">
        <label for="participants">Participants</label>
        {{multiselect-checkboxes options=people labelProperty='name' selection=participants}}
      </div>

      <button {{action 'addExpense'}} class="submit btn btn-primary" type="submit">Add expense</button>
    </form>
  </div>
</div>


<h2>Current status</h2>

<ul class="nav nav-tabs">
  {{#link-to 'expenses.summary' tagName='li'}}<a href="" {{bind-attr href='view.href'}}>Summary</a>{{/link-to}}

  {{#link-to 'expenses.list' tagName='li'}}<a href="" {{bind-attr href='view.href'}}>List of expenses</a>{{/link-to}}

  {{#link-to 'expenses.payments' tagName='li'}}<a href="" {{bind-attr href='view.href'}}>Payments made</a>{{/link-to}}
</ul>

